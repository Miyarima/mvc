{% extends "base/game_base.html.twig" %}

{% block title %}Drawn Card{% endblock %}

{% block body %}
    <section>
        <h4 class="game-text">Husets Hand: <strong>8</strong></h4>
        <div class="border-cards dealer-cards">
            <div class="center-cards">
                {% for i in 0..1 %}
                    <img class="card-bj" src="{{ asset('img/2_of_clubs-min.svg') }}" alt="">
                {% endfor %}
            </div>
        </div>
        <h4 class="game-text">Din Hand: <strong>6</strong></h4>
        <div class="border-cards your-cards">
            <div class="center-cards">
                {% for card in cards %}
                    <img class="card-bj" src="{{ asset('img/'~ card ~'-min.svg') }}" alt="">
                {% endfor %}
            </div>
        </div>
        <div class="game-buttons">
            <a class="button" href="#">STÃ…</a>
            <a class="button" href="{{ path('start_black_jack') }}">DRA</a>
        </div>
    </section>
{% endblock %}