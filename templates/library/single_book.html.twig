{% extends 'base/base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1 class="center-text">{{ title }}.</h1>
    <section class="single-book">
        <img src="{{ asset('img/'~ img ~'.jpg') }}" alt="">
        <div>
            <h4><strong>Titel:</strong> {{ title }}</h4>
            <h4><strong>Författare:</strong> {{ author }}</h4>
            <h4><strong>ISBN:</strong> {{ isbn }}</h4>
        </div>
    </section><br>
    <div class="game-buttons">
        <a class="button" href="{{ path('library_show_all') }}">Gå Tillbaka</a>
        <a class="button" href="{{ path('update_book', {id:id}) }}">Uppdatera</a>
        <a class="button" href="{{ path('delete_book', {id:id}) }}">Ta Bort</a>
    </div>
{% endblock %}